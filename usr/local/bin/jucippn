#!/bin/bash
pkgver=$(wget -cqO- https://github.com/cppit/jucipp/releases | grep "tar\.gz" | cut -d '/' -f 5 | head -n 1 | cut -d '"' -f 1 | sed 's/v//g' | sed 's/\.tar\.gz//g')
cd $HOME/AUR/jucipp
pkgpver=$(sed -n 's/pkgver=//p' PKGBUILD)

if ! [[ $pkgver == $pkgpver ]]; then
    printf "Juci++$pkgver\n"
else
    printf "Juci++ï…¤\n"
fi
