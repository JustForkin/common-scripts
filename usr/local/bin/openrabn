#!/bin/bash
# OpenRA latest commit on the bleed branch available
cd /home/fusion809/GitHub/others/OpenRA
# update repository
if `which git > /dev/null 2>&1`; then
    git pull origin bleed -q
else
    printf "git isn't found. Please install it, or if it is installed edit your system PATH." && exit
fi

orlv=$(git rev-list --branches bleed --count)
# OpenRA latest packaged version
orpv=$(cat $HOME/OBS/home:fusion809/openra-bleed/openra-bleed.spec | grep "Version:" | sed 's/Version:\s*//g')

if [[ $orpv == $orlv ]]; then
    printf "OpenRA Bleedï…¤ \n"
else
    printf "OpenRA Bleed${orlv}\n"
fi
