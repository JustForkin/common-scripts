#!/bin/bash
if ! command -v zenity > /dev/null 2>&1; then
    printf "Zenity is not installed, so there is nothing for me to generate popup windows.\n" && return
fi

if ! command -v curl > /dev/null 2>&1; then
    if ! command -v wget > /dev/null 2>&1; then
         zenity --error --text="Neither cURL nor wget have been detected. These are required in order to check for updates. Please install at least one of them and if one is already installed please edit your system PATH and re-run this script." --title="Warning!" && return
    fi
fi

if ! command -v git > /dev/null 2>&1; then
    zenity --error --text="git cannot be detected in command -v system PATH. If it is not installed please install it, if it is please edit system PATH so this script can find it.\n" && return
fi

0adnz;
atomnz;
