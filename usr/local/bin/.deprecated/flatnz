#!/bin/bash
if command -v wget > /dev/null 2>&1; then
    pkgver=$(wget -cqO- https://github.com/flatpak/flatpak/releases | grep "tar\.gz" | cut -d '/' -f 5 | cut -d '"' -f 1 | sed 's/\.tar\.gz//g' | head -n 1)
elif command -v curl > /dev/null 2>&1; then
    pkgver=$(curl -sL https://github.com/flatpak/flatpak/releases | grep "tar\.gz" | cut -d '/' -f 5 | cut -d '"' -f 1 | sed 's/\.tar\.gz//g' | head -n 1)
else
    zenity --error --text="Neither cURL nor wget are detected, please install them, or if installed add to system PATH." --title="Warning!" && return
fi
pkgpver=$(cat /home/fusion809/OBS/home:fusion809/flatpak/flatpak.spec | grep "Version:" | cut -d ':' -f 2 | sed 's/\s*//g')

if ! [[ $pkgver == $pkgpver ]]; then
    zenity --error --text="A new Flatpak release (${pkgver}) is now available! To update to it run flatup." --title="Warning!"    
fi
