#done

# OpenRA Red Alert 2 mod latest commit available
cd /home/fusion809/GitHub/others/ss || return
git stash -q || return
if ! command -v git > /dev/null 2>&1; then
    printf "%s\n" "git is not detected, please install it and if already installed add it to your system PATH!" && return
fi
git pull origin master -q || ( printf "ORASSErr\n" && return )
orlv=$(git rev-list --branches master --count)
# OpenRA latest packaged version
orpv=$(grep "Version:" < /home/fusion809/OBS/home:fusion809/openra-ss/openra-ss.spec | sed 's/Version:\s*//g')

if [[ $orpv == $orlv ]]; then
    printf "%s\n" "ORASSï…¤ "
else
    printf "%s\n" "ORASS${orlv}"
fi
