#!/bin/bash
while ! `ping -q -w 1 -c 1 $(ip r | grep default | cut -d ' ' -f 3) > /dev/null`
do
    sleep 60
done

# OpenRA latest commit on the bleed branch available
cd /home/fusion809/GitHub/others/OpenRAModSDK
# update repository
if `which git > /dev/null 2>&1`; then
    git pull origin master -q
else
    printf "git isn't found. Please install it, or if it is installed edit your system PATH." && exit
fi

sdklv=$(git rev-list --branches master --count)
# OpenRA latest packaged version
sdkpv=$(cat /data/OBS/home:fusion809/openra-sp/openra-sp.spec | grep "Version:" | sed 's/Version:\s*//g')

cd /data/GitHub/others/Shattered-Paradise
splc=$(git log | head -n 1 | cut -d ' ' -f 2)
splver=$(git rev-list --branches master --count)
sppc=$(cat /data/OBS/home:fusion809/openra-sp/openra-sp.spec | grep "define sp_commit" | sed 's/%define sp_commit //g')

if [[ $sdkpv == $sdklv ]] && [[ $splc == $sppc ]]; then
    printf "SSP \n"
elif [[ $sdkpv == $sdklv ]]; then
    printf "S SP${splver}\n"
elif [[ $splc == $sppc ]]; then
    printf "S${sdklv}SP \n"
else
    printf "S${sdklv}SP${splver}\n"
fi
